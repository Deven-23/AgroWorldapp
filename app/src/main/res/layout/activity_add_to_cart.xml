<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.shopping.activity.AddToCartActivity">

        <TextView
            android:id="@+id/tvNoCartDataFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fredoka_one"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:visibility="gone"
            android:layout_above="@id/crdPayment"
            android:text="Look's like you haven't add any item to cart."
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/size_20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_crt_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/crdPayment"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/crdPayment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cart_bottom_bg">

                <TextView
                    android:id="@+id/tvAddAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:drawableEnd="@drawable/baseline_add_location_alt_24"
                    android:drawablePadding="@dimen/dp_20"
                    android:fontFamily="@font/fredoka_one"
                    android:gravity="end"
                    android:text="Add Address"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/size_20sp" />

                <TextView
                    android:id="@+id/tvTotalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAddAddress"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/fredoka_one"
                    android:text="Total: "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAddAddress"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:fontFamily="@font/fredoka_one"
                    android:text="456.88"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnProceedToPayment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/all_buttons"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Proceed To Payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
