<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_noDataFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/llDataLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".fragments.EducationFragment">

                <TextView
                    android:id="@+id/tvCropsEd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Crops"
                    android:textColor="@color/darkPink"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_Crops_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvFruits_Ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Fruits"
                    android:textColor="@color/darkPink"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_fruits_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvFlowers_Ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Flowers"
                    android:textColor="@color/darkPink"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_flowers_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvHow_To_Expand_Ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:fontFamily="@font/lexend_bold"
                    android:text="How To Expand"
                    android:textColor="@color/darkPink"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_how_to_expand_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvNoEducationDataFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_20"
                android:fontFamily="@font/lexend_bold"
                android:gravity="center"
                android:text="Look's like education data not updated yet."
                android:textColor="@color/darkPink"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

</layout>

